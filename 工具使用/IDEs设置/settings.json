{
  "editor.tabSize": 2,
  "editor.cursorBlinking": "smooth",
  "editor.stickyScroll.maxLineCount": 10,
  "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.scrollbar.verticalScrollbarSize": 0,
  "editor.formatOnSaveMode": "modificationsIfAvailable",
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.bracketPairColorization.independentColorPoolPerBracketType": true,
  "editor.codeActions.triggerOnFocusChange": true,
  "editor.dragAndDrop": false,
  "editor.guides.bracketPairs": "active",
  "editor.linkedEditing": true,
  "editor.renderFinalNewline": "dimmed",
  "editor.renderLineHighlight": "all",
  "editor.smoothScrolling": true,
  "editor.scrollbar.ignoreHorizontalScrollbarInContentHeight": true,
  "editor.pasteAs.enabled": false,
  "editor.minimap.maxColumn": 20,
  "editor.formatOnType": true,
  "editor.copyWithSyntaxHighlighting": false,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnPaste": true,
  "editor.guides.indentation": false,
  "editor.lightbulb.enabled": "off",
  "editor.parameterHints.cycle": false,
  "editor.scrollbar.vertical": "hidden",
  "editor.scrollbar.scrollByPage": true,
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.minimap.showSlider": "always",
  "editor.minimap.size": "fit",
  "editor.fontSize": 16,
  "files.autoSave": "onWindowChange",
  "files.insertFinalNewline": true,
  "files.exclude": {
    "**/.idea": true
  },
  "files.trimTrailingWhitespace": true,
  "files.trimFinalNewlines": true,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.replaceTagsWhenPull": true,
  "git.suggestSmartCommit": false,
  "git.closeDiffOnOperation": true,
  "git.blame.statusBarItem.template": "${authorName} (${authorDateAgo}) ${hashShort}",
  "git.blame.editorDecoration.template": "${subject}, ${authorName} (${authorDateAgo}) ${hashShort}",
  "explorer.copyRelativePathSeparator": "/",
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "tsconfig.json": "tsconfig.*.json, env.d.ts",
    "vite.config.*": "jsconfig*, vitest.config.*, cypress.config.*, playwright.config.*",
    "package.json": "package-lock.json, pnpm*, .yarnrc*, yarn*, .eslint*, eslint*, .oxlint*, oxlint*, .prettier*, prettier*, .editorconfig, .stylelint*, stylelint*"
  },
  "window.title": "${rootName}${separator}${activeEditorMedium}${separator}${profileName}",
  "window.confirmBeforeClose": "keyboardOnly",
  "window.zoomPerWindow": false,
  "search.collapseResults": "auto",
  "search.seedOnFocus": true,
  "search.showLineNumbers": true,
  "search.exclude": {
    "**/*.logs": true
  },
  "terminal.integrated.copyOnSelection": true,
  "terminal.integrated.allowChords": false,
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.scrollback": 3000,
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.enableVisualBell": true,
  "terminal.integrated.env.osx": {
    "PATH": "null"
  },
  "vue.inlayHints.missingProps": true,
  "vue.inlayHints.inlineHandlerLeading": true,
  "typescript.inlayHints.variableTypes.enabled": true,
  "typescript.inlayHints.propertyDeclarationTypes.enabled": true,
  "typescript.inlayHints.parameterTypes.enabled": true,
  "typescript.inlayHints.functionLikeReturnTypes.enabled": true,
  "typescript.inlayHints.enumMemberValues.enabled": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "js/ts.implicitProjectConfig.target": "ESNext",
  "eslint.codeActionsOnSave.mode": "problems",
  "merge-conflict.autoNavigateNextConflict.enabled": true,
  "inlineChat.holdToSpeech": false,
  "diffEditor.renderSideBySide": true,
  "diffEditor.experimental.showMoves": true,
  "diffEditor.hideUnchangedRegions.enabled": true,
  "diffEditor.ignoreTrimWhitespace": false,
  "clipboard-manager.maxClips": 40,
  "markdown.updateLinksOnFileMove.enabled": "always",
  "workbench.list.smoothScrolling": true,
  "workbench.colorTheme": "Webstorm New Dark",
  "workbench.iconTheme": "vscode-icons",
  "workbench.list.scrollByPage": true,
  "workbench.tree.stickyScrollMaxItemCount": 10,
  "workbench.editor.tabActionCloseVisibility": false,
  "workbench.view.showQuietly": {
    "workbench.panel.output": false
  },
  "workbench.view.alwaysShowHeaderActions": true,
  "interactiveWindow.executeWithShiftEnter": true,
  "partialDiff.commandsOnContextMenu": {
    "togglePreComparisonTextNormalizationRules": false,
    "diffVisibleEditors": false,
    "markSection2AndTakeDiff": false,
    "markSection1": false
  },
  "vsicons.dontShowNewVersionMessage": true,
  "extensions.ignoreRecommendations": true,
  "javascript.updateImportsOnFileMove.enabled": "always",
    "liveServer.settings.donotShowInfoMsg": true,

  // vscode only
  "github.copilot.nextEditSuggestions.fixes": true
}
